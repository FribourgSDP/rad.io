<?xml version="1.0" encoding="utf-8"?>
<!-- Resource file containing the different styles to apply to the UI elements. -->
<resources>
    <!-- Style for main menu buttons. -->
    <style name="MainButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">16dp</item>
    </style>
    <!-- Style for settings options. -->
    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/design_default_color_on_secondary</item>
    </style>
</resources>