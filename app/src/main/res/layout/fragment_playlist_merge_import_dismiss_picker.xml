<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/MergeImportDismissPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MergeImportDismissPlaylistText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mergeImportDismissLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MergeImportDismissPlaylist">

        <Button
            android:id="@+id/mergePlaylistButton"
            style="@style/SongChoices"
            android:layout_height="wrap_content"
            android:text="@string/mergePlaylist" />

        <Button
            android:id="@+id/importPlaylistButton"
            style="@style/SongChoices"
            android:text="@string/importPlaylist" />
        <Button
            android:id="@+id/dismissOnlineButton"
            style="@style/SongChoices"
            android:text="@string/dismissOnlinePlaylist" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>