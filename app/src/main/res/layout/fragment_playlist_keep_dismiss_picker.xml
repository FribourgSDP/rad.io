<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/KeepPlaylistLocally"
        style="@style/Text.Popup"
        android:text="@string/KeepPlaylistLocallyText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/quitOrStayLobbyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KeepPlaylistLocally">

        <Button
            android:id="@+id/keepPlaylistButton"
            style="@style/GradientButton.Popup"
            android:layout_height="wrap_content"
            android:text="@string/keepPlaylist" />

        <Button
            android:id="@+id/dismissPlaylistButton"
            style="@style/GradientButton.Popup"
            android:text="@string/dismissPlaylist" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>