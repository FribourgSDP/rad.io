<?xml version="1.0" encoding="utf-8"?>
<!-- Resource file containing the different styles to apply to the UI elements in dark mode. -->
<resources>
    <!-- Style for settings options. -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>
    <!-- Style for the text logo -->
    <style name="Text.Logo">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/jost_bold</item>
    </style>
</resources>